<div class="moviecard">
  <div onclick={{action 'playTrailer'}} class="movie-poster" style={{movie.cover_background}}></div>
  <div id="movie-content">
    <div class="movie-ratings"><span class="star">â˜…</span><span class="score">{{movie.score}}</span><span class="score-out-of">/ 10 (IMDB)</span></div>
    <div class="movie-title"><a href="{{movie.imdb}}" target="_blank">{{movie.title}}</a><span class="movie-year">{{movie.year}}</span></div>
    <div class="movie-details"><span class="movie-rating">R</span><span class="movie-duration">{{movie.duration}}</span><span class="movie-genre">{{movie.genres}}</span></div>
    <div class="movie-castcrew"><span class="title">Director</span><span class="name">{{movie.directors}}</span></div>
    <div class="movie-castcrew"><span class="title">Writer</span><span class="name">{{movie.writers}}</span></div>
    <div class="movie-castcrew"><span class="title">Cast</span><span class="name">{{movie.actors}}</span></div>
    <div class="movie-synopsis">{{movie.description}}</div>
    <button onclick={{action 'playTrailer'}} class="movie-trailer-btn" type="button">play trailer</button>
  </div>
  <div onclick={{action 'backToInfo'}} class="movie-trailer"><a class="back-btn">back</a>
    <div id="youvideo">
      <iframe src={{movie.video}} frameborder="0" allowfullscreen="allowfullscreen" allowScriptAccess="always"></iframe>
    </div>
  </div>
</div>